<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/plat_selector"
    android:descendantFocusability="afterDescendants"
    tools:context="com.example.jules.restofacile.CommanderActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/img"
        android:src="@drawable/burger"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOM RESTAURANT"
        android:id="@+id/libelle"
        android:layout_alignTop="@+id/img"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etoile: ***"
        android:id="@+id/textView2"
        android:textSize="8dp"
        android:layout_alignBottom="@+id/img"
        android:layout_alignLeft="@+id/nom"
        android:layout_alignStart="@+id/nom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="telephone"
        android:id="@+id/nom"
        android:textSize="10dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/libelle"
        android:layout_alignStart="@+id/libelle" />

</RelativeLayout>
</FrameLayout>